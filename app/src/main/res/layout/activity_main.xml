<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/main_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <fragment
            android:id="@+id/search_bar"
            android:name="com.example.carx.SearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="TOP PICKS"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="CATEGORIES"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="221dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/myImageView"
                        android:layout_width="match_parent"
                        android:layout_height="221dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"
                        android:onClick="toSUVListActivity"
                        android:src="@drawable/suv" />
                    <TextView
                        android:id="@+id/myImageViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/myImageView"
                        android:layout_alignTop="@+id/myImageView"
                        android:layout_alignRight="@+id/myImageView"
                        android:layout_alignBottom="@+id/myImageView"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="SUVs"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:background="#FF5722"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="221dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/myImageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"
                        android:onClick="toSupercarListActivity"
                        android:src="@drawable/supercar" />
                    <TextView
                        android:id="@+id/myImageViewText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/myImageView2"
                        android:layout_alignTop="@+id/myImageView2"
                        android:layout_alignRight="@+id/myImageView2"
                        android:layout_alignBottom="@+id/myImageView2"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="SUPERCARS"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:background="#FF5722"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="221dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/myImageView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"
                        android:onClick="toJDMListActivity"
                        android:src="@drawable/jdm" />
                    <TextView
                        android:id="@+id/myImageViewText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/myImageView3"
                        android:layout_alignTop="@+id/myImageView3"
                        android:layout_alignRight="@+id/myImageView3"
                        android:layout_alignBottom="@+id/myImageView3"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="JDM"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:background="#FF5722"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>